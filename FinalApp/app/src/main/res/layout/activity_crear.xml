<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Crear"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="atras"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR VOTACIÓN"/>

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        />

    <EditText
        android:id="@+id/edtNewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Respuesta posible"
        />

    <EditText
        android:id="@+id/edtNewCI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CI a invitar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Item"/>

        <Button
            android:id="@+id/btnAddInvitado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir CI"/>

        <Button
            android:id="@+id/btnCrearVotacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPCIONES"/>
    <ListView
        android:id="@+id/listItemsVotacion"
        android:layout_width="wrap_content"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INVITADOS"/>
    <ListView
        android:id="@+id/listInvitados"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>